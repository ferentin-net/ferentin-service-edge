# Ferentin Service Edge Configuration
# Copy this file to .env and update values

# Required: Control plane URL
EDGE_CONTROL_PLANE_URL=https://cp.example.com

# Required: Edge node identification
EDGE_ID=edge-001
EDGE_TENANT_ID=tenant-123

# Optional: Site identifier for multi-site deployments
# EDGE_SITE_ID=site-001

# Optional: Spring profile (production, nginx, aws-secure)
SPRING_PROFILES_ACTIVE=production

# Optional: Image version (default: latest)
SERVICE_EDGE_VERSION=latest

# Optional: Custom JVM options
# JAVA_OPTS=-Xmx1g -Xms512m

# Optional: Enable virtual threads (Java 21+)
# ENABLE_VIRTUAL_THREADS=true

# Optional: Custom CA bundle (PEM format, base64 encoded)
# EDGE_CA_BUNDLE=LS0tLS1CRUdJTi...
